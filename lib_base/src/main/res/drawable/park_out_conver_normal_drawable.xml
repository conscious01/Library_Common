<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- center circle -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff333399"/>
            <corners android:radius="20dp" ></corners>

            <gradient
                android:angle="270"
                android:endColor="#7A67EE"
                android:startColor="#7A67EE" />
        </shape>
    </item>
 
</layer-list>