<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true" android:color="@color/white">
       <shape>
          <solid android:color="@color/button_red_pressed" />
          <stroke android:width="1dp" android:color="@color/button_red_edge" />
          <corners android:radius="5dp"/>
          <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
       </shape>
    </item>
    
    <item android:state_enabled="false" android:color="@color/lightgray">
        <shape>
            <solid android:color="@color/button_red_disabled" />
            <stroke android:width="1dp" android:color="@color/button_red_disabled_edge" />
            <corners android:radius="5dp" />
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    
    <item android:color="@color/white">
        <shape>
            <solid android:color="@color/button_red" />
            <stroke android:width="1dp" android:color="@color/button_red_edge" />
            <corners android:radius="5dp"/>
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>